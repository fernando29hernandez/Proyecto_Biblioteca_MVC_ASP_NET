@model  proyecto.Models.ViewModels.AutorViewModel
@{
    ViewBag.Title = "Nuevo Autor";
}

<h2>Nuevo Autor</h2>


@using (Html.BeginForm("Nuevo", "Autor", FormMethod.Post)) {
<div class="row">
    <div class="col-md-12">
        @Html.LabelFor(d=>d.nombre)
        @Html.TextBoxFor(d=>d.nombre, "", new {@class= "form-control"})
    </div>
    <br>
<div style="text-align:right;">
    <input type="submit" value="Guardar" class="btn btn-primary"/>
</div>
</div>
}