

@model  proyecto.Models.ViewModels.AutorViewModel
@{
    ViewBag.Title = "Editar Autor";
}

<h2>Editar Autor</h2>


@using (Html.BeginForm("Editar", "Autor", FormMethod.Post))
{
    <div class="row">
        <div class="col-md-12">
        @Html.HiddenFor(d=>d.id_autor);
            @Html.LabelFor(d => d.nombre)
            @Html.TextBoxFor(d => d.nombre, "", new { @class = "form-control" })
        </div>
        <br>
        <div style="text-align:right;">
            <input type="submit" value="Editar Cambios" class="btn btn-primary" />
        </div>
    </div>
}